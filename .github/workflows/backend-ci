name: CI - Java Spring boot

on:
  pull_request:
    branches: 
      - master
    paths:
      - app/Java/**

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v3
    - name: Set up JDK 17
      uses: actions/setup-java@v3
      with:
        java-version: '17'
        distribution: 'temurin'
        cache: maven
    - name: Build and run Unit/Integration Tests with Maven
      run: mvn -ntp -B verify
